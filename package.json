{
  "name": "cyclone-engine",
  "version": "2.0.0",
  "description": "A Discord bot jumpstart library running on Oceanic that is focused on offering features without compromising on developer freedom",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "cleanup": "rm -r dist/ coverage/ .nyc_output/",
    "test": "tsc && eslint ./ && nyc --reporter lcov ava --verbose **/*.test.ts",
    "test-watch": "nyc --reporter lcov ava --verbose --watch **/*.test.ts",
    "lint": "eslint ./"
  },
  "nyc": {
    "exclude": [
      "coverage/**",
      "packages/*/test/**",
      "test/**",
      "build/**",
      "dist/**",
      "test{,-*}.ts",
      "**/*{.,-}test.ts",
      "**/__tests__/**",
      "**/node_modules/**",
      "**/babel.config.js"
    ]
  },
  "ava": {
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "timeout": "20s"
  },
  "files": [
    "dist/"
  ],
  "author": "exoRift",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/exoRift/cyclone-engine.git"
  },
  "keywords": [
    "javascript",
    "discord",
    "bot",
    "oceanic",
    "command",
    "handler",
    "engine",
    "library"
  ],
  "bugs": {
    "url": "https://github.com/exoRift/cyclone-engine/issues"
  },
  "homepage": "https://exoRift.github.io/cyclone-engine",
  "devDependencies": {
    "@types/node": "^18.11.10",
    "@types/sinon": "^10.0.13",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "ava": "^5.1.0",
    "eslint": "^8.28.0",
    "eslint-config-standard-with-typescript": "^26.0.0",
    "jsdoc": "^4.0.0",
    "nyc": "^15.1.0",
    "sinon": "^14.0.2",
    "syren": "^1.0.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.2"
  },
  "peerDependencies": {
    "oceanic.js": "^1.9.0"
  },
  "dependencies": {
    "chalk": "^4.1.2"
  }
}
